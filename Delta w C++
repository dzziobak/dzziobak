#include <iostream>
#include <cmath>

int main() {
    double a, b, c;

    do {
        std::cout << "Podaj wspolczynniki a, b i c (a nie moze byc rowne zero): ";
        std::cin >> a;
    } while (a == 0);

    std::cin >> b >> c;

    double delta = b * b - 4 * a * c;

    std::cout << "Delta wynosi: " << delta << std::endl;

    return 0;
}
